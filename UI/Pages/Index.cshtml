@model UI.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Warranty[0].WarrantyPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warranty[0].PeriodUnitmeasure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warranty[0].ActiveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warranty[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warranty[0].Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warranty[0].Jewelry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Warranty) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WarrantyPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodUnitmeasure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jewelry.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.WarrantyId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.WarrantyId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.WarrantyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
