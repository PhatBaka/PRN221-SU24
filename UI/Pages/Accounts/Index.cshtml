@page
@model UI.Pages.Accounts.IndexModel

@{
    var prevDisabled = !Model.Accounts.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Accounts.HasNextPage ? "disabled" : "";
}

<style>
    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        padding: 8px;
        line-height: 1.42857143;
        vertical-align: middle;
        border-top: 1px solid #ddd
    }
</style>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="col-sm-6">
                    <div class="center_shop_tl clearfix d-flex align-items-center">
                        <h4 class="mgt"><a class="button" asp-page="/Accounts/Create">CREATE</a></h4>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="center_shop_tr text-right clearfix">
                        <h6 class="col_2">You are here: <a asp-asp-page="Accounts/Index">Home</a> / Gem</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="center_shop_tl clearfix">
                    <table class="table table-striped table-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>PhoneNumber</th>
                                <th>Status</th>
                                <th>Role</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var gem in Model.Accounts)
                            {
                                <tr class="d-flex justify-content-center">
                                    <td>@gem.AccountId</td>
                                    <td>@gem.Email</td>
                                    <td>@gem.Password</td>
                                    <td>@gem.PhoneNumber</td>
                                    <td>@gem.Status</td>
                                    <td>@gem.Role</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <div class="enquiry_1 text-center clearfix">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <a asp-page="./Index"
                               asp-route-pageIndex="@(Model.Accounts.PageIndex - 1)"
                               asp-route-currentFilter="@Model.CurrentFilter"
                               class="btn btn-primary @prevDisabled">
                                Previous
                            </a>
                            <a asp-page="./Index"
                               asp-route-pageIndex="@(Model.Accounts.PageIndex + 1)"
                               asp-route-currentFilter="@Model.CurrentFilter"
                               class="btn btn-primary @nextDisabled">
                                Next
                            </a>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>

