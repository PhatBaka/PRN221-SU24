@page
@model UI.Pages.Accounts.DetailsModel

<style>
    .account-details {
		margin: auto 50px;
		margin-top: 50px;
        max-width: 800px;
	}
</style>
<div class="account-details">
    <h4>Account - ID #@Model.Account.AccountId - @Model.Account.FullName</h4>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Property</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Account.Email)</td>
                <td>@Html.DisplayFor(model => model.Account.Email)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Account.Password)</td>
                <td>@Html.DisplayFor(model => model.Account.Password)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Account.PhoneNumber)</td>
                <td>@Html.DisplayFor(model => model.Account.PhoneNumber)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Account.CreatedDate)</td>
                <td>@Html.DisplayFor(model => model.Account.CreatedDate)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Account.FullName)</td>
                <td>@Html.DisplayFor(model => model.Account.FullName)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Account.Role)</td>
                <td>@Html.DisplayFor(model => model.Account.Role)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Account.ObjectStatus)</td>
                <td>@Html.DisplayFor(model => model.Account.ObjectStatus)</td>
            </tr>
        </tbody>
    </table>
    <div>
        <a  class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Account?.AccountId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

