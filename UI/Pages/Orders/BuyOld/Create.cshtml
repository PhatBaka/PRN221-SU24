@page
@model UI.Pages.Orders.BuyOld.CreateModel
@{
    Layout = "_Layout";
}

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="col-sm-6">
                    @if (Model.Message != null)
                    {
                        <h2 class="mgt" style="color: red">@Model.Message</h2>
                    }
                </div>
                <div class="col-sm-6">
                    <div class="center_shop_tr text-right clearfix">
                        <h6 class="col_2">You are here: <a asp-asp-page="Gems/Index">Order</a></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="center_shop_tl clearfix">
                    <h2 class="mgt">METAL PRICE</h2>
                    <hr />
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Metal</th>
                                <th>Price</th>
                                <th>Ask</th>
                                <th>Bid</th>
                                <th>High</th>
                                <th>Low</th>
                                <th>Change</th>
                                <th>Change %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var metal in Model.Metals)
                            {
                                var change = metal.Rate?.Change ?? 0;
                                var changeClass = change > 0 ? "up-rectangle" : "down-rectangle";
                                <tr>
                                    <td>@metal.Metal</td>
                                    <td>@metal.Rate?.Price.ToString("0.00")</td>
                                    <td>@metal.Rate?.Ask.ToString("0.00")</td>
                                    <td>@metal.Rate?.Bid.ToString("0.00")</td>
                                    <td>@metal.Rate?.High.ToString("0.00")</td>
                                    <td>@metal.Rate?.Low.ToString("0.00")</td>
                                    <td>
                                        @metal.Rate?.Change.ToString("0.00")%
                                        <span class="@changeClass"></span>
                                    </td>
                                    <td>
                                        @metal.Rate?.ChangePercent.ToString()%
                                        <span class="@changeClass"></span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_1 clearfix">
                <div class="col-sm-6">
                    <div class="">
                        <div class="col-sm-6">
                            <div class="">
                                <div class="collcet_1r clearfix">
                                    <form method="post" asp-page-handler="FindCustomer">
                                        <h2 class="mgt">PHONE NUMBER</h2>
                                        <hr />
                                        <div class="center_shop_1li1 clearfix">
                                            <input name="phoneNumber" style="width: 200px" class="form-control" type="text" required>
                                        </div>
                                        <h5 class="mgt"><input class="button" type="submit" value="FIND CUSTOMER" /></h5>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="detail_14 clearfix">
                                @if (Model.CurrentCustomer == null)
                                {
                                    <h2 class="mgt">CUSTOMER INFO</h2>
                                    <form method="post" asp-page-handler="CreateAccount">
                                        <input type="email" class="form-control" placeholder="Email" asp-for="Account.Email" required>
                                        <input type="text" class="form-control" placeholder="Full Name" asp-for="Account.FullName" required>
                                        <input type="phone" class="form-control" placeholder="Phone Number" required asp-for="Account.PhoneNumber">
                                        <h4><input class="button" type="submit" value="CREATE CUSTOMER" href="#" />
                                    </form>
                                }
                                else
                                {
                                    <h2 class="mgt">CUSTOMER INFO</h2>
                                    <input readonly type="text" class="form-control" placeholder="Email" asp-for="CurrentCustomer.Email">
                                    <input readonly type="text" class="form-control" placeholder="Full Name" asp-for="CurrentCustomer.FullName">
                                    <input readonly type="text" class="form-control" placeholder="Phone Number" asp-for="CurrentCustomer.PhoneNumber">
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <h2 class="mgt">CARTS</h2>
                    <hr />
                    <table class="table table-striped table-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Buy Price</th>
                                <th>Weight</th>
                                <th>Total Price</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.MaterialCart != null && Model.MaterialCart.Count() > 0)
                            {
                                @foreach (var material in Model.MaterialCart)
                                {
                                    <tr class="d-flex justify-content-center">
                                        <td>@material.MaterialId</td>
                                        <td>@material.MaterialName</td>
                                        <td>@material.BidPrice</td>
                                        <td>
                                            <input type="number" class="form-control weight-input" data-id="@material.MaterialId" value="0" min="0" step="any" />
                                        </td>
                                        <td class="total-price" data-id="@material.MaterialId">0.00</td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (Model.MaterialCart != null && Model.MaterialCart.Count > 0)
                    {
                        <div class="center_shop_1li clearfix">
                            <h2 class="mgt">TOTALS: </h2>
                            <hr />
                            <h4 id="grand-total">Grand Total: 0.00</h4>
                        </div>
                    }
                    <hr />
                    <div style="display: flex; justify-content: space-between; gap: 10px; ">
                        <h4 class="mgt"><input id="send-json-button" class="button" type="submit" value="CREATE ORDER" /></h4>
                        <form method="post" asp-page-handler="ClearCart">
                            <h4 class="mgt"><input class="button" type="submit" value="CLEAR CART" /></h4>
                        </form>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Function to update the total price when weight is updated
        function updateTotalPrice(materialId, bidPrice, weight) {
            let totalPriceElement = document.querySelector(`.total-price[data-id="${materialId}"]`);
            let totalPrice = bidPrice * weight;
            totalPriceElement.innerText = totalPrice.toFixed(2);
            updateGrandTotal();
        }

        // Function to update the grand total
        function updateGrandTotal() {
            let grandTotal = 0;
            document.querySelectorAll('.total-price').forEach(element => {
                grandTotal += parseFloat(element.innerText);
            });
            document.getElementById('grand-total').innerText = "Grand Total: " + grandTotal.toFixed(2);
        }

        // Attach event listener to weight inputs
        document.querySelectorAll('.weight-input').forEach(input => {
            input.addEventListener('input', function () {
                let materialId = this.getAttribute('data-id');
                let bidPrice = parseFloat(this.closest('tr').querySelector('td:nth-child(3)').innerText);
                let weight = parseFloat(this.value);

                if (!isNaN(weight)) {
                    updateTotalPrice(materialId, bidPrice, weight);
                }
            });
        });

        // Function to collect cart data and send it as JSON
        function sendCartDataAsJson() {
            let cartData = [];
            document.querySelectorAll('tbody tr').forEach(row => {
                let materialId = row.querySelector('.weight-input').getAttribute('data-id');
                let materialName = row.querySelector('td:nth-child(2)').innerText;
                let bidPrice = parseFloat(row.querySelector('td:nth-child(3)').innerText);
                let weight = parseFloat(row.querySelector('.weight-input').value);
                let totalPrice = parseFloat(row.querySelector('.total-price').innerText);

                if (!isNaN(weight)) {
                    cartData.push({
                        materialId: materialId,
                        materialName: materialName,
                        bidPrice: bidPrice,
                        weight: weight,
                        totalPrice: totalPrice
                    });
                }
            });

            console.log('Sending cart data:', cartData);

            fetch('@Url.Page("Orders/BuyOld/SubmitOrderJson")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(cartData)
            })
                .then(response => response.json())
                .then(data => {
                    console.log('Success:', data);
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
        }

        // Attach event listener to the send JSON button
        document.getElementById('send-json-button').addEventListener('click', sendCartDataAsJson);

        // Initial grand total update in case of pre-filled values
        updateGrandTotal();
    });

</script>
