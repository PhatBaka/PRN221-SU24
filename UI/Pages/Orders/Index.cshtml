@* @page
@model UI.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Your Orders";
    Layout = "_Layout";
}

<h1 class="my-4">Your Orders</h1>

@if (Model.UserOrders.Count == 0)
{
    <div class="alert alert-info" role="alert">
        You have no orders.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Order Type</th>
                    <th>Total Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.UserOrders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("g")</td>
                        <td>@order.OrderType</td>
                        <td>@order.OrderDetails.Sum(od => od.Quantity * od.UnitPrice).ToString("C")</td>
                        <td>
                            <a asp-page="/Orders/Details" asp-route-id="@order.OrderId" class="btn btn-info btn-sm">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
 *@