@page
@model UI.Pages.Materials.Gems.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].MaterialName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].Clarity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].Sharp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Material) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clarity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Purity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sharp)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MaterialId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MaterialId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MaterialId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
