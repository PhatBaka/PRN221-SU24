@page
@model UI.Pages.Materials.Gems.IndexModel

@{
    ViewData["Title"] = "Index";
    var prevDisabled = !Model.Gems.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Gems.HasNextPage ? "disabled" : "";
}

<style>
    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        padding: 8px;
        line-height: 1.42857143;
        vertical-align: middle;
        border-top: 1px solid #ddd
    }
</style>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="col-sm-6">
                    <div class="center_shop_tl clearfix d-flex align-items-center">
                        <h4 class="mgt"><a class="button" asp-page="./Create">CREATE</a></h4>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="center_shop_tr text-right clearfix">
                        <h6 class="col_2">You are here: <a asp-asp-page="Gems/Index">Home</a> / Gem</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="center" class="center_shop">
    <div class="container">
        <div class="row">
            <div class="center_shop_t clearfix">
                <div class="center_shop_tl clearfix">
                    <table class="table table-striped table-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Cost</th>
                                <th>Clarity</th>
                                <th>Color</th>
                                <th>Sharp</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var gem in Model.Gems)
                            {
                                <tr class="d-flex justify-content-center">
                                    <td>@gem.MaterialId</td>
                                    <td>@gem.MaterialName</td>
                                    <td>@gem.MaterialCost</td>
                                    <td>@gem.Clarity</td>
                                    <td>@gem.Color</td>
                                    <td>@gem.Sharp</td>
                                    <td>
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(gem.MaterialImage)" alt="@gem.MaterialName" style="max-width: 100px; max-height: 100px;" />
                                    </td>
                                    <td>
                                        <a class="button" asp-page="/Materials/Gems/Details" asp-route-id="@gem.MaterialId">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <div class="enquiry_1 text-center clearfix">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <a asp-page="./Index"
                               asp-route-pageIndex="@(Model.Gems.PageIndex - 1)"
                               asp-route-currentFilter="@Model.CurrentFilter"
                               class="btn btn-primary @prevDisabled">
                                Previous
                            </a>
                            <a asp-page="./Index"
                               asp-route-pageIndex="@(Model.Gems.PageIndex + 1)"
                               asp-route-currentFilter="@Model.CurrentFilter"
                               class="btn btn-primary @nextDisabled">
                                Next
                            </a>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
