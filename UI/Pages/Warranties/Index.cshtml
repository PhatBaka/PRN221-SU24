@page
@model UI.Pages.Warranties.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WarrantyRequest[0].ReceivedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WarrantyRequest[0].ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WarrantyRequest[0].WarrantyStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WarrantyRequest[0].WarrantyOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WarrantyRequest[0].Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WarrantyRequest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarrantyStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarrantyOrder.WarrantyOrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.WarrantyRequestId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.WarrantyRequestId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.WarrantyRequestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
